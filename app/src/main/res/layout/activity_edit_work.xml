<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".EditWork">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_back"
                    app:tint="#ffffff" />

                <TextView
                    android:id="@+id/text_toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/give_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/assign_work_to_all"
                        android:textColor="#000"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_classname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/setting_button"
                        android:focusable="false"
                        android:hint="@string/classname"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#100F0F" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/setting_button"
                        android:hint="@string/title"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#100F0F" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/setting_button"
                        android:hint="@string/work_title"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#100F0F" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <CalendarView
                        android:id="@+id/edit_time_end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/setting_button"
                        android:ems="10"
                        android:hint="@string/end_time"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#100F0F" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_due_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints=""
                        android:background="@drawable/setting_button"
                        android:cursorVisible="false"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="@string/end_time"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#100F0F"
                        tools:ignore="TextFields" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/todo"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_faculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@drawable/setting_button"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="@string/faculty"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColorHint="#100F0F" />

                </LinearLayout>

                <View
                    android:id="@+id/view_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#bdbdbd" />

                <LinearLayout
                    android:id="@+id/layout_assign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <Button
                        android:id="@+id/edit_assign_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="@string/edit"
                        android:textAllCaps="false" />
                </LinearLayout>

                <View
                    android:id="@+id/view_assign"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="#bdbdbd" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>